<ul class="parent">
{% for link in linklists.main-menu.links %}
<li><a href="{{ link.url }}">{{ link.title }}</a>
{% if link.links != blank %}
  <ul class="child">
    {% for child_link in link.links %} 
      {% if child_link.title != '-' %}
      {% if child_link.url == '/collections/men' or  child_link.url =='/collections/women/audience_women' %} 
       <li><span>{{ child_link.title }}</span>       
      {% else %} 
       <li><a href= "{{ child_link.url }}">{{ child_link.title }}</a>
      {% endif %}  
      {% endif %}
    {% if child_link.links != blank %}
      <ul class="grandchild">
      {% for grandchild_link in child_link.links %}  
        {% if grandchild_link.title != '-' %} 
          <li><a href= "{{ grandchild_link.url }}">{{ grandchild_link.title }}</a></li>
        {% endif %}
      {% endfor %}
      </ul>
    {% endif %}   
    </li>
    {% endfor %}
  </ul> 
{% endif %} 
</li>
{% endfor %}
</ul>


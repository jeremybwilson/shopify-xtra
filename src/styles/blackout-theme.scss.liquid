// BLACKOUT THEME .: NOTE :. Enabling from theme settings with true or false
{% if settings.blackout_theme == true %}
.twin-promos {
	background-color: $color--primary-2;
	padding-top: 100px;
	margin: 0;
	.single-promo {
		.cta {
			a {
				color: $color--white;
			}
			svg {
				* {
					fill: $color--white;
				}
			}
		}
		h3 {
			color: $color--white;
		}
	}
}
.featured-collection {
	.section-header {
		h2 {
			color: $color--primary-2;
			margin-bottom: 50px;
		}
		a {
			span {
				background-color: $color--accent-1;
				color: $color--white;
				padding: 20px 85px;
			}
			svg {
				display: none;
			}
		}
	}
}
.product-collection-carousel {
	.product-info {
		h3 {
			font-weight: bolder;
		}
		.price {
			color: $color--accent-1;
		}
	}
}
.icon-caret_left {
	path {
		fill: $color--primary-2;
	}
}
.icon-caret_right {
	path {
		fill: $color--primary-2;
	}
}
.box-ratio {
	img {
		-webkit-filter: grayscale(100%);
		filter: grayscale(100%);
	}
}
.columns-carousel {
	.overlay{display: none;}
	.owl-item{
		&:nth-child(odd){
			.column-item{
				background-color: #383837;
				.box-ratio{
					opacity: 0.30;
					transition: 0.3s all;
				}
			}
			.column-item.hovered{
				.box-ratio{
					opacity: 0.60;
				}
			}
		}
		&:nth-child(even){
			.column-item{
				background-color: #e1e1e1;
				.box-ratio{
					opacity: 0.60;
					transition: 0.3s all;
				}
			}
			.column-item.hovered{
				.box-ratio{
					opacity: 0.30;
				}
			}
		}
	}
	.cta {
		border: 2px solid $color--accent-1;
		padding: 15px 25px;
		max-width: 50%;
		display: block;
		margin: 40px auto 0;
		svg {
			display: none;
		}
	}
}
.flex-caption.slide-1536252750894-0 {
	.cta {
		a {
			background-color: transparent !important;
			border: 2px solid $color--accent-1;
			padding: 15px 25px;
		}
	}
}
.newsletter-wrapper {
	background: $color--primary-2;
	#button-footer-newsletter-submit {
		svg {
			path {
				fill: $color--accent-1;
			}
		}
	}
	.share-info {
		#share-info-line {
			p {
				display: none;
			}
		}
	}
}
#nav-bar-wrapper {
	nav#nav {
		.nav-category-header {
			color: $color--white;
		}
	}
	#nav-bar-bg {
		background: #060606;
	}
	#nav-user {
		ul#nav-user-list {
			.nav-search{
				.nav-search-input{
					color:$color--white;
					height: auto;
					line-height: normal;
					margin: 0;
					padding: 5px 19px 5px 0;
					@include fontSize( 15px );
					border-radius: 0;
					&::-webkit-input-placeholder{
						color: $color--white;
						text-transform: uppercase;
					}
					&:-ms-input-placeholder{
						color: $color--white;
						text-transform: uppercase;
					}
					&::placeholder{
						color: $color--white;
						text-transform: uppercase;
					}
					&:focus{
						box-shadow: none;
						min-height: unset;
					}
				}
			}
			.nav-account {
				.icon-account {
					fill: $color--white;
				}
			}
			.nav-cart {
				.icon-cart {
					fill: $color--white;
				}
			}
		}
	}
	.icon-nav-mobile-menu{
		.bar{
			background: $color--white;
		}
	}
}
.nav-search-icon-wrap {
	.icon-search {
		path {
			fill: $color--white;
		}
	}
}
.social-wrapper {
	.section-title {
		color: $color--primary-2;
	}
}
#top-bar-bg {
	#bg-1 {
		background-color: $color--white;
	}
}
#top-bar{
	a{
		@include mq( 'phone' ){
			color:$color--primary-2;
		}
	}
}
#double-promo-wrapper {
	.one {
		a {
			color: $color--primary-2;
		}
	}
}
#nosto-block{
	@include mq( 'phone' ){
		margin-bottom: 0 !important;
		margin-top: 0 !important;
	}
	.title{
		color: $color--primary-2 !important;
		@include mq('tablet-and-up'){
			font-size: 2rem !important;
		}
	}
	.product-info{
		h3{
			margin-bottom: 0;
		}
		.product-price-wrap{
			.prod-price{
				color: $color--accent-1;
			}
		}
	}
}
.homepage-twin-promos{
	background-image: url({{ 'home_twin_bg.jpg' | asset_url }});
	background-size: cover;
	background-position: top center;
	@include mq('phone'){
		padding-top: 50px;
		.homepage-section{
			margin-bottom: 0;
		}
		.single-promo{
			margin-bottom: 50px;
		}
	}
	.gridlock-fluid{
		> .row{
			width:85%;
			@include mq( 'phone' ){
				width: 100%;
				padding-left: 0px;
				padding-right: 0px;
			}
		}
	}
	.box-ratio{
		img{
			-webkit-filter: unset;
			filter: unset;
		}
	}
}
.homepage-section.featured-collection{
	.section-header{
		.section-heading{
			float: none;
			color: $color--primary-2;
			@include mq('tablet-and-up'){
				font-size: 2rem;
			}
		}
		a{
			padding: 0;
			display: table;
			margin: 0 auto;
			span{
				display: block;
			}
		}
	}
}
.slideshow-section{
	.flex-caption{
		.caption-inners{
			max-width: unset;
		}
	}
}
.instagram-feed{
	background-image: url({{ 'bg-home-instagram-mobile-gray.jpg' | asset_url }});
	@include mq('tablet-and-up'){
		background-image: url({{ 'bg-home-instagram-gray.jpg' | asset_url }});
	}
}
#shopify-section-newsletter{
	.form-control{
		&::-webkit-input-placeholder{
			color: $color--accent-1;
			text-transform: uppercase;
		}
		&:-ms-input-placeholder{
			color: $color--accent-1;
			text-transform: uppercase;
		}
		&::placeholder{
			color: $color--accent-1;
			text-transform: uppercase;
		}
	}
}
.index_Slider{
	> ul{
		> li{
			> iframe{
				height:100%;
				position: absolute;
			}
		}
	}
}
svg{
	path.st0{fill:#FFFFFF;}	
} 
{% endif %}
/*/*CSS STYLE FOR NOSTO*/

  #nosto-block {
  	clear: both;
    margin: 60px 1.04166667%;
    padding-top: 60px;
    padding-bottom: 30px;

    #cartpage-nosto-1 & {
      margin-top: 0;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
    }

    /* HEADER STYLE */

    .title {
        margin-bottom: 0px;
        text-align: center;
        color: $color--primary-1;
        font-weight: $font-weight--black;
        @include fontDim(22px,28px,.04em);
        text-transform: uppercase;

        @include mq('tablet-and-up') {
          margin-bottom: 32px;
          @include fontDim(42px,58px,0);
        }

        #cartpage-nosto-1 & {
         @include fontSize(26px);
        }
    }

    .slick-track {
      #cartpage-nosto-1 & {
        width: 200px !important;
      }
    }

    .slick-initialized .slick-slide {
      display: block;
      padding: 0;
      margin-bottom: 0;
      width: 100%;

      #cartpage-nosto-1 & {
        width: 200px !important;
      }
    }

    .item {
      float: left;
      padding-left: 3px;
      padding-right: 3px;
      width: 100%;
      margin-bottom: 25px;


       @include mq('phone') {
          width: 33.33333%;
      }
    }

    .product-image {
      display: block;
      width: 100%;

      img {
        display: block;
        margin: 0 auto;
        width: 100%;
      }
    }

    .product-info {
      text-align: center;

      .name {
        max-width: 250px;
        margin: 0 auto;
        color: $color--primary-3;
        font-weight: $font-weight--black;
        @include fontDim(16px,16px,0);
        text-transform: uppercase;

        #cartpage-nosto-1 & {
            @include fontSize(14px);
        }
      }

      .price {
        margin-top: 0;
        color: $color--dark-gray;
        @include fontSize(14px);
        letter-spacing: .26em;

        @include mq('tablet-and-up') {
          display: block;
          margin-top: 12px;
          @include fontSize(16px);
          letter-spacing: .15em;
        }
      }
    }


  /* CONTROLS : Arrows and slider dots
   * ------------------------------------------ */


    .slick-arrow {
      position: absolute;
      top: 40%;
      transform: translateY(-50%);
      z-index: 2;

      &:hover { text-decoration: none; }

      &.prev {
        left: 0px;
      }

      &.next {
        right: 0px;
      }

      .label { display: none; }

      .icon-caret_right,
      .icon-caret_left { width: 25px; }
    }

    .nosto-ribbon {
     display:none !important;
    }

}

#cookie-banner--popup-wrapper {
  position: fixed !important;
  width: 100% !important;
  top: auto !important;
  bottom: 0 !important;
  left: 0 !important;
  right: 0 !important;
  border-top: solid 3px $color--accent-1;
  box-shadow: 0px 2px 25px 0px rgba(0,0,0,0.33);

  .fancybox-inner {
    width: 100% !important;
    overflow: hidden !important;
  }

  .fancybox-close {
    display: none;
  }

  .fancybox-skin {
    background-color: $color--primary-1;
  } 
  p {
    margin-bottom: 0;
    color: $color--white;
  }
}

#cookie-banner--popup--inner {
  @include flexbox;
  @include flex-direction(column);

  @include mq('tablet-and-up') {
    @include justify-content(space-between);
    @include flex-direction(row);
    @include align-items(center);
    margin-top: 25px;
    margin-bottom: 25px;
  }
}
#cookie-banner--popup {
  .mobile-text {
    width: 100%;
    margin: 15px 0;
    text-align: center;

    @include mq('tablet-and-up') {
      display: none;
    }
  }
  .desktop-text {
    max-width: 880px;
    @include fontDim(12px,20px,.04em);

    @include mq('phone') {
      display: none;
    }

    a {
      color: $color--white;
      text-decoration: underline;
    }
  }
  .buttons {
    @include flexbox;
    @include justify-content(space-between);
    @include mq('tablet-and-up') {
      margin-left: 40px;
    }

    a {
      text-decoration: none;
      letter-spacing: .25em;

      @include mq('phone') {
        width: 46%;
        height: 30px;
        margin-left: 2%;
        margin-right: 2%;
        line-height: 26px;
        @include fontSize(10px);
        border: solid 2px transparent;
      }
    }
    .more-info {
      border-color: $color--white;
      background: transparent;
      text-align: center;

      @include mq('tablet-and-up') {
        display: none;
      }

      &:hover {
        border-color: $color--accent-1;
        background-color: $color--accent-1;
      }
    }
    .button-close {
      text-align: center;
      background: $color--accent-1;
      text-decoration: none;

      &:hover {
        background-color: $color--primary-1;
      }

      @include mq('tablet-and-up') {
        width: 210px;
        height: 55px;    
        line-height: 55px;  
      }
    }
  }
}
@charset "UTF-8";

.featured-collection {
  // top header 
  text-align: center;

  @include mq('tablet-and-up') {
    margin-top: 60px;
  }

  .row {
    @include mq('phone') {
      padding-left: 16px;
      padding-right: 16px;
    }
  }

  .section-header {

    h2 {
      margin-bottom: 0px;
      color: $color--primary-2;
      @include fontSize(22px);
      letter-spacing: .15em;
      text-transform: uppercase;

      @include mq('tablet-and-up') {
        margin-bottom: 12px;
        @include fontSize(30px);
        font-weight: $font-weight--black;
        letter-spacing: .25em;         
      }

      &:after {
        display: none;
      }  
    }
    .cta {
      display: block;
    }
    a {
      display: block;
      color: $color--primary-2;
      @include fontSize(13px);
      font-weight: $font-weight--medium;
      letter-spacing: .125em;
      text-transform: uppercase;
      text-decoration: none;

      @include mq('tablet-and-up') {
        @include fontSize(16px);
        letter-spacing: .2em;        
      }

      svg {
        width: 9px;
        margin-left: 9px;

        @include mq('tablet-and-up') {
          width: 12px;
          margin-left: 12px;        
        }
      }
    }    

  }
}

.product-collection-carousel {
  position: relative;

  .owl-nav {
    display: block;

    button {
      position: absolute;
      top: 50%; 
      transform: translateY(-50%);

      &.disabled {
        opacity: .3;
      }
    }
    svg {
      width: 18px;

      @include mq('tablet-and-up') {
        width: 20px;
      }
    }
  }
  .owl-prev {
    left: 0;
  }
  .owl-next {
    right: 0;
  }

  .owl-next:before {
    display: none;
  }
  .owl-prev:before {
    display: none;
  }

  // take this out when PLP styling is complete

  .product-index {
    margin-bottom: 0;
  }

  .icn {
    display: none; // hide for now while we sort this out
  }

  .product-info {
    a {
      text-decoration: none;
    }
    h3 {
      max-width: 250px;
      margin: 0 auto;
      color: $color--primary-2;
      @include fontSize(14px);
      font-weight: $font-weight--bold;
      text-transform: uppercase;
      letter-spacing: .2em;
      line-height: 24px / 16px * 1em;

      @include mq('tablet-and-up') {
        @include fontSize(16px);
        letter-spacing: .15em;
      }
    }
    .price {
      margin-top: 0;
      color: $color--dark-gray;
      @include fontSize(14px);
      letter-spacing: .26em;

      @include mq('tablet-and-up') {
        margin-top: 12px;
        @include fontSize(16px);
        letter-spacing: .15em;

      }
    }
  }
  .product-modal {
    @include h7;
    @include fontSize( 16px );
    background: $color--accent-1;
    color: $color--white;
    opacity: 0;
    border-radius: 0;
    transition: opacity .25s ease-in-out;
  }

  @include mq('lap-and-up') {
    .product-index:hover .product-modal {
      display: block;
      opacity: 0.9;
      pointer-events: all;
    }
    .product-index:hover .product-modal:hover {
      opacity: 1;
    }
  }

  .owl-dots {
    display: none;
  }
}

.product-carousel--nav {
  display: none;
}
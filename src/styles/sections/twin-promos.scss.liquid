@charset "UTF-8";

.twin-promos {
  @include mq('tablet-and-up') {
    margin-top: 60px;
  }
  @include mq('lap-and-up') {
    margin-top: 100px;
  }

  .single-promo {
    margin-bottom: 40px;
    text-align: center;

    @include mq('tablet-and-up') {
      &:first-of-type { padding-right: 20px; }
      &:last-of-type { padding-left: 20px; }
      &:only-of-type { padding-left: 0; padding-right: 0;}
    }
    @include mq('lap-and-up') {
      &:first-of-type { padding-right: 40px; }
      &:last-of-type { padding-left: 40px; }
      &:only-of-type { padding-left: 0; padding-right: 0;}
    }

    .text-promo-content {
      margin-top: 24px;
      padding-left: 20px;
      padding-right: 20px;

      @include mq('tablet-and-up') {
        width: 90%;
        margin: 30px auto 0;
        padding-left: 0;
        padding-right: 0;
      }
    }

    h3 {
      color: $color--text-1;
      @include fontSize(20px);
      font-weight: $font-weight--bold;
      text-transform: uppercase;
      letter-spacing: .1em;
      line-height: 24px / 20px * 1em;

      @include mq('tablet-and-up') {
        @include fontSize(22px);
        letter-spacing: .15em;
      }
    }
    .copy {
      @include mq('tablet-and-up') {
        margin-top: 12px;
      }
      p {
        @include fontSize(14px);
        letter-spacing: .05em;
        line-height: 22px / 14px * 1em;

        @include fontSize(16px);
        line-height: 26px / 16px * 1em;
      }
    }
    .cta {
      margin-top: 12px;
      @include fontSize(16px);
      letter-spacing: .2em;
      font-weight:  $font-weight--medium;
      text-transform: uppercase;
      display: block;

      @include mq('tablet-and-up') {
        margin-top: 15px;
      }

      a {
        color: $color--text-1;
        text-decoration: none;
        letter-spacing: inherit;
      }

      svg {
        width: 8px;
        height: 8px;
        margin-left: 4px;

        @include mq('tablet-and-up') {
          width: 10px;
          height: 10px;
        }
      }
      a:hover svg * {
        fill: #99482F;
      }
    }
  }
}
@charset "UTF-8";

#subpage {
  margin-right: 27px;
  margin-left: 27px;

  @include p;
  font-size: 14px;
  line-height: 2;

  @include mq("tablet-and-up") {
    margin: 0;
  }

  p {
    color: $color--primary-2;
    @include fontDim(14px,24px,0);
    margin-bottom: 20px;

    @include mq( 'tablet-and-up' ) {
      @include fontDim(16px,36px,0);
    }
  }
  h1 {
    @include h1;
    color: $color--primary-1;
    @include fontSize(22px);
    text-transform: uppercase;
    border-bottom: none;

    @include mq("tablet-and-up") {
      @include fontSize(30px);
    }
  }
  h2 {
    color: $color--primary-1;
    font-weight: $font-weight--black;
    @include fontSize(17px);

    @include mq('tablet-and-up') {
      @include fontSize(22px);
    }
  }
  h3 {
    color: $color--primary-1;
    font-weight: $font-weight--black;
    @include fontSize(14px);

    @include mq('tablet-and-up') {
      @include fontSize(18px);
    }
  }
  h4 {
    @include fontSize(14px);
    font-weight: $font-weight--black;
    color: $color--primary-1;
    text-transform: uppercase;

    @include mq("tablet-and-up") {
      @include fontSize(16px);
    }
  }
  h5 {
    @include fontDim(17px,24px,0);
    color: $color--primary-2;
    margin: 15px 0;
    @include mq("tablet-and-up") {
      @include fontDim(25px,34px,0);
    }
  }
  table {
    margin-bottom: 30px;
  }
  ul > li {
    list-style: none;
    color: $color--primary-2;
    padding-bottom: 10px;
    @include fontDim(14px,24px,0);

    @include mq( 'tablet-and-up' ) {
      @include fontDim(16px,36px,0);
    }

    &:before {
      content: "â€¢";
      color: $color--primary-1;
      margin-right: 10px;
    }
  }
  ol > li {
    list-style-type: decimal;
    content: " ";
    padding-bottom: 10px;
    padding-left: 40px;

    &:last-child {
      padding-bottom: 0;
    }
  }

  // SUBPAGE : Left-nav

  div.left-nav {
    float: left;
    width: 100%;
    margin: 0 0 25px 0;

    @include mq("tablet-and-up") {
      width: auto !important;
    }

    div.desktop-left-nav {
      display: none;

      @include mq("tablet-and-up") {
        display: block;
        float: left;
        width: 100%;
        padding-left: 168px;
      }
      @include mq("wide-and-up") {
        padding-left: 200px;
      }

      @include mq("tablet") {
        padding-left: 0;
      }

      ul > li {
        margin-bottom: 0px;

        &:before {
          content: " ";
          margin-right: 0;
        }

        a {
          color: $color--primary-2;
        }
      }
    }
  }

  .left-nav--categories {
    .opener {
      @include flexbox;
      @include justify-content(space-between);
      @include align-items(center);
      width: 100%;
      padding: 10px 15px;
      background: $color--gray-1;
      color: $color--white;
      font-weight: $font-weight--book;
      @include fontSize(14px);

      svg {
        width: 10px;
        transition: transform .25s ease;
        * {
          fill: $color--white;
        }
      }

      &.is-on {
        svg {
          transform: rotate(-180deg);
        }
      }
    }

    div.dropdown {
      display: none;
      float: left;
      width: 100%;
      background: $color--light-gray;
      padding: 10px 15px;

      a {
        float: left;
        width: 100%;
        color: $color--primary-2;
        margin-bottom: 15px;
      }
    }

    @include mq("tablet-and-up") {
      display: none;
    }
  }

  div.page-content-field {
    float: left;

    @include mq("tablet-and-up") {
      float: right;
      width: 65%;
    }

    a {
      color: $color--accent-1;
    }
  }

  // SUBPAGE : Content : Columns for Shipping

  div.col {
    width: 100%;
    float: left;
    background: $color--primary-1;
    color: $color--white;
    border: 1px dotted $color--white;
    margin: 10px 0 20px 0;
    text-align: center;
    height: 200px;
    padding: 2%;

    @include mq("tablet-and-up") {
      width: 33%;
    }

    img {
      padding-top: 7%;

      @include mq("tablet-and-up") {
        padding-top: 0;
      }
    }
  }

  table {
    tr:first-child {
    }
    td {
      border: 1px solid #ccc;
      padding: 5px 10px;
    }
  }
}

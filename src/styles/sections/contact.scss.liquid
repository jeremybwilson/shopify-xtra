@charset "UTF-8";

#contact-muck {
  h3 {
    @include h3;
    font-size: 22px;
    color: #fff;
    letter-spacing: 0;
    text-transform: capitalize;
    margin: 25px 0;
  }
  h4 {
      margin-bottom: 15px;
  }
  h5 {
    text-transform: capitalize;
    margin: 10px 0;
  }
  p {
    margin-bottom: 0;
  }
  hr {
    margin: 25px 0;
  }
  br {
    @include mq( 'phone' ) {
      display: none;
    }
  }
  table {
    
    td {
      float: left;
      border: none;
      vertical-align: top;
      padding: 0;

      @include mq( 'phone' ) {
        float: left;
        width: 100% !important;
        padding: 0 !important;
        margin: 0 !important;
        border-left: none !important;
        height: auto !important;
      }
      @include mq( 'tablet' ) {
        float: left;
        width: 100% !important;
        padding: 0 !important;
        margin: 0 !important;
        border-left: none !important;
        height: auto !important;
      }
    }
  }

  .page-content-field {
    a {
      font-weight: 700;
    }
  }

}


#muck-form {
    float: right;
    width: 100%;
    margin: 50px 0;
    background-color: #164732;
  
  form {
    width: 80%;
    margin: 0 auto;
    padding: 15px 0;
      
    @include mq('tablet-and-up') {
      width: 60%;
      padding: 50px 0;
    }
    label {
      color: #fff;
      font-size: 16px;
      font-weight: 300;
      margin-bottom: 10px;

      .req {
        color: $color--accent-1;
        font-size: 19px;
      }
    }
    input {
      background: #fff;
      border-radius: 0;
    }
    input::placeholder { 
      color: transparent;
      opacity: 0;
    }
    textarea {
      background-color: #fff;
      border-radius: 0;
    }
    textarea::-webkit-input-placeholder { 
      color: transparent;
    }
    p.form-phone {
      display: none;
    }
    p.form-name,
    p.form-email {
      display: inline-block;
      width: 100%;

      @include mq('tablet-and-up') {
        width: 49%;
      }
    }
    p.form-email {
      margin-left: 1%;
    }
    p.form-submit {
      text-align: center;
    }
    input[type="submit"] {
      width: 200px;
      background-color: #ab5232;
    }
    .successForm p {
      color: #fff;
      border: 1px solid#fff;
      padding: 5px 20px;
    }
  }
}


#honeywell-updates {
  float: left;
  width: 100%;

  div {
    float: left;
    padding-right: 25px;
    // white-space: nowrap;

    @include mq( 'phone' ) {
      width: 100%;
      margin: 15px 0;
    }
  }
  a {
    display: inline-block;
    color:$color--primary-1 !important;
    text-transform: uppercase;
    letter-spacing: .1em;
  }
  svg {
    display: inline-block;
    width: 10px;
    height: 10px;
    transition: transform .25s ease;
    transform: rotate(-90deg);
  }
}
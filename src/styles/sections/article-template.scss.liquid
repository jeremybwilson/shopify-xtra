.article-template {
  .article-featured-img {
    display: none;
    .box-ratio {
      height: 400px;
      position: relative;

      img {
        position: absolute;
        top: 50%;
        -webkit-transform: translateY(-51%);
        -moz-transform: translateY(-51%);
        -ms-transform: translateY(-51%);
        -o-transform: translateY(-51%);
        transform: translateY(-51%);
      }

      @include mq('phone') {
        height: 230px;

        img {
          -webkit-transform: translateY(-56%);
          -moz-transform: translateY(-56%);
          -ms-transform: translateY(-56%);
          -o-transform: translateY(-56%);
          transform: translateY(-56%);
        }
      }
    }
  }

  #content {
    padding: 0 10px 50px;
  }

  .blog-article {
    float: none !important;
    margin-left: auto !important;
    margin-right: auto !important;
  }

  #blog-article {
    float: none;
    margin-left: auto;
    margin-right: auto;

    .blog-title {
      margin: 85px auto 10px;
      text-align: center;

      a {
        color: {{settings.nav_links_hover}};
        font-family: $font-stack--heading;
        font-size: 17px;
        font-weight: 500;
        letter-spacing: 0.2rem;
        text-transform: uppercase;
      }
    }

    .article-title {
      border: none !important;
      color: {{settings.nav_header_color}};
      font-family: $font-stack--heading;
      font-size: 53px;
      font-weight: 800;
      letter-spacing: 0.84rem;
      margin-bottom: 10px !important;
      text-align: center;
      text-transform: uppercase;
    }

    .posted {
      color: {{settings.nav_header_color}};
      font-size: 14px;
      font-weight: 400;
      text-align: center;
      text-transform: uppercase;
    }

    .comments {
      margin: 10px auto;
      text-align: center;

      a {
        .comments-icon {
          color: {{settings.nav_links_hover}};
          font-size: 18px;
          margin-right: 5px;
        }
        .comments-count {
          font-size: 16px;
          font-weight: 400;
          text-transform: capitalize;
        }
      }
    }

    .share-icons {
      border: none;
      margin: 15px auto;
      padding: 0;
      text-align: center;

      a {
        color: {{settings.nav_header_color}} !important;
        font-size: 12px;
        margin: 5px 17px;
      }

      .envelop {
        .fa-2x {
          font-size: 20px;
        }
      }
    }

    #article-body {
      border-top: 1px solid #eee;
      margin-top: 40px;

      .rte {
        margin: 57px auto 0;

        h1,h2,h3,h4,h5,h6 {
          margin-left: auto;
          margin-right: auto;
          margin-bottom: 50px;
          padding: 0 30px;
          text-align: center;
          width: 72.91666667%;
        }

        h4 {
          font-size: 18px;
          font-weight: 400;
          letter-spacing: 0.045rem;
          line-height: 2.1rem;
        }

        p {
          font-size: 16px;
          letter-spacing: 0.045rem;
          line-height: 1.94rem;
          margin-left: auto;
          margin-right: auto;
          margin-bottom: 30px;
          padding: 0 30px;
          text-align: left;
          width: 72.91666667%;
        }

        iframe {
          display: block;
          height: 560px;
          margin: 0 auto 57px;
          max-width: 960px;
        }

        table {
          margin: 50px auto;
        }

        img {
          height: 100%;
          padding: 0 10px;
          width: 100%;
          margin: 50px 0;
        }

        table {
          td {
            img {
              height: auto;
              width: auto;
            }
          }
        }
      }

      #comments {
        padding: 20px 38px 0 22px;

        .comments-container {
          margin-top: 15px;

          .section-title {
            color: {{settings.nav_header_color}};
            font-size: 28px;
            font-weight: 800;
            letter-spacing: 0.57rem;
            margin-bottom: 33px;
            text-align: left;
            text-transform: uppercase;
          }

          .info-block {
            border-bottom: 1px solid #eee;
            color: {{settings.nav_header_color}};
            //display: flex;
            display: block;
            font-size: 16px;
            font-weight: 400;
            //justify-content: space-between;
            margin-bottom: 32px;
            padding-bottom: 20px;
            text-transform: capitalize;

            .customer-login {
              float: right;
              font-size: inherit;

              .comments-icon {
                color: {{settings.nav_links_hover}};
                font-size: 18px;
                margin-right: 5px;
              }

              .login-text {
                color: {{settings.nav_header_color}};
                font-size: inherit;
                margin-right: 16px;
              }
            }
          }

          .social-block {
            color: {{settings.nav_header_color}};
            display: flex;
            font-size: 14px;
            font-weight: 400;
            justify-content: space-between;
            margin-bottom: 20px;

            .recommend {
              margin-right: 14px;

              .comments-icon {
                color: {{settings.nav_links_hover}};
                font-size: inherit;
                margin-right: 3px;
              }
            }
            .social-twitter,
            .social-facebook {
              border-radius: 3px;
              color: white;
              margin-right: 5px;
              padding: 3px 0 3px 5px;
              font-size: 14px;
              text-transform: uppercase;

              .sub-text {
                font-size: 9px;
                letter-spacing: 0;
                margin-right: 5px;
                vertical-align: middle;
              }
            }

            .social-twitter {
              background-color: #33aae0;
            }

            .social-facebook {
              background-color: #3b5d98;
            }
            .sort-widget {
              .sort-text {
                font-size: 16px;
                margin-right: 15px;
              }
            }
          }

          .comment-submit-block {
            border-bottom: 1px solid #eee;
            display: flex;
            margin-bottom: 10px;
            padding: 20px 0 5px;

            .user-info-part {
              color: {{settings.nav_header_color}};
              font-size: 43px;
              padding: 3px 0 0;
              width: 60px;
            }
            #comment-form {
              margin-right: auto;
              max-width: 600px;
              padding-right: 15px;
              width: 100%;

              .form-widget {
                input {
                  max-width: 590px;
                  height: 47px;
                  line-height: 47px;
                  font-size: 18px;
                  padding: 0 10px;
                }

                .hide-part {
                  display: none;
                }
              }

              .comment-submit {
                background-color: {{settings.nav_links_hover}};
                display: none;
                letter-spacing: 0.1rem;
                float: right;
                font-size: 14px;
                font-weight: 500;
              }
            }
          }

          .comments-list-block {
            width: 100%;

            #commentlist {
              margin-top: 40px;

              .comment-single-part {
                display: flex;

                .user-info-part {
                  align-items: center;
                  background-color: #164732;
                  border-radius: 25px;
                  color: white;
                  display: flex;
                  font-size: 17px;
                  font-weight: 500;
                  height: 43px;
                  justify-content: center;
                  margin-right: 16px;
                  width: 45px;
                }

                .comment-details-part {
                  font-size: 14px;
                  padding-top: 10px;
                  width: 100%;

                  .comment-details {
                    margin-bottom: 18px;

                    .author {
                      color: {{settings.nav_header_color}};
                      font-size: 16px;
                      font-weight: 500;
                      margin-right: 5px;
                    }
                  }

                  .comment {
                    float: none;
                    margin-bottom: 30px;

                    p {
                      font-size: 16px;
                    }
                  }

                  .controls {
                    .reply-control {
                      letter-spacing: 0;
                      margin-right: 15px;
                    }
                    .share-control {
                      .fa-share-square-o {
                        color: {{settings.nav_links_hover}};
                        font-size: 16px;
                        font-weight: 800;
                        margin-right: 10px;
                      }
                    }
                  }
                }
              }
            }
          }

        }
      }
    }
  }

  .related-articles {
    background-color: #f5f1ed;
    margin-top: 20px;
    padding: 100px 0 40px;
  }

  @media screen and (max-width: 959px) {
    #blog-article {
      #article-body {
        .rte {
          margin: 57px auto 0;

          h1, h2, h3, h4, h5, h6 {
            margin-left: auto;
            margin-right: auto;
            margin-bottom: 32px;
            padding: 0 5px;
            text-align: center;
            width: 100%;
          }

          h4 {
            font-size: 14px;
            font-weight: 400;
            letter-spacing: 0.045rem;
            line-height: 1.65rem;
            text-align: left;
          }

          p {
            font-size: 14px;
            line-height: 1.65rem;
            margin-bottom: 20px;
            padding: 0 4px;
            width: 100%;
          }

          iframe {
            height: 100%;
            margin: 0 auto 40px;
            min-height: 350px;
          }

          table {
            margin: 26px auto;
          }

          img {
            height: auto;
            padding: 0;
            margin: 0;
          }
        }
      }
    }
  }

  @include mq('phone') {
    #content {
      padding: 0 10px 20px;
    }
    #blog-article {
      .blog-title {
        margin: 43px auto 7px;

        a {
          font-size: 14px;
          letter-spacing: 0.1rem;
        }
      }

      .article-title {
        font-size: 22px;
        letter-spacing: 0.35rem;
        margin-bottom: 0 !important;
      }

      .posted {
        font-size: 12px;
        margin-bottom: 7px;
      }

      .share-icons {
        margin: 0 auto;

        a {
          font-size: 10px;
          margin: 5px 11px;
        }
      }

      .comments {
        a {
          .comments-count {
            font-size: 13px;
          }
        }
      }

      #article-body {
        margin-top: 20px;

        .rte {
          margin: 57px auto 0;

          h1,h2,h3,h4,h5,h6 {
            margin-left: auto;
            margin-right: auto;
            margin-bottom: 32px;
            padding: 0 5px;
            text-align: center;
            width: 100%;
          }

          h4 {
            font-size: 14px;
            font-weight: 400;
            letter-spacing: 0.045rem;
            line-height: 1.65rem;
            text-align: left;
          }

          p {
            font-size: 14px;
            line-height: 1.65rem;
            margin-bottom: 20px;
            padding: 0 4px;
            width: 100%;
          }

          iframe {
            height: 100%;
            margin: 0 auto 40px;
            min-height: 185px;
          }

          table {
            margin: 26px auto;

            tr {
              display: grid;
            }
          }

          img {
            height: auto;
            padding: 0;
            margin: 0;
          }
        }

        #comments {
          padding: 20px 10px 0;

          .comments-container {
            margin-top: 10px;

            .section-title {
              font-size: 22px;
              letter-spacing: 0.35rem;
              margin-bottom: 16px;
            }

            .info-block {
              font-size: 14px;
              margin-bottom: 28px;
              padding-bottom: 13px;

              .customer-login {
                .login-text {
                  margin-right: 27px;
                }
              }
            }

            .social-block {
              flex-direction: column;
              margin-bottom: 0;
              padding: 0 3px;

              .social {
                margin-bottom: 15px;
              }

              .social-twitter,
              .social-facebook {
                float: right;
                padding: 0 0 0 5px;
              }
              .sort-widget {
                text-align: right;

                .sort-text {
                  font-size: 14px;
                  letter-spacing: 0.02rem;
                  margin-right: 22px;
                }
              }
            }

            .comment-submit-block {
              padding: 12px 0 5px;

              #comment-form {
                padding: 0 5px;

                .form-widget {
                  input {
                    font-size: 14px;
                    letter-spacing: 0.03rem;
                    padding: 0 6px;
                  }
                }
              }
            }

            .comments-list-block {
              #commentlist {
                margin-top: 20px;

                .comment-single-part {
                  .user-info-part {
                    margin-right: 10px;
                    max-width: 45px;
                    min-width: 45px;
                    width: 45px;
                  }

                  .comment-details-part {
                    .comment-details {
                      margin-bottom: 10px;

                      .author {
                        display: block;
                        font-size: 15px;
                        margin-bottom: 5px;
                      }
                    }

                    .comment {
                      margin-bottom: 20px;

                      p {
                        font-size: 14px;
                      }
                    }
                  }
                }
              }
            }

          }
        }
      }
    }

    .related-articles {
      margin-top: 0;
      padding: 55px 0 40px;
    }
  }
}
@charset "UTF-8";

.instagram-feed {
  margin-bottom: 0;
  padding-top: 50px;
  padding-bottom: 50px;
  background-image: url({{ 'bg-home-instagram.jpg' | asset_url }});
  text-align: center;

  @include mq('tablet-and-up') {
    padding-top: 115px;
    padding-bottom: 145px;
  }

  // text box

  .text-box {
    max-width: 360px;
    margin: 0 auto 35px;

    @include mq('tablet-and-up') {
      margin-bottom: 45px;
    }
  }

  h2 {
    margin-bottom: 15px;
    color: $color--text-1;
    @include fontSize(22px);
    font-weight: $font-weight--bold;
    text-transform: uppercase;
    letter-spacing: .2em;
    line-height: 28px / 22px * 1em;

    @include mq('tablet-and-up') {
      @include fontSize(30px);
      letter-spacing: .25em;
      font-weight: $font-weight--black;
    }

    &:after {
      display: none;
    }
  }
  .copy {
    @include mq('tablet-and-up') {
      margin-top: 12px;
    }
    p {
      @include fontSize(14px);
      letter-spacing: .05em;
      line-height: 22px / 14px * 1em;

      @include fontSize(16px);
      line-height: 26px / 16px * 1em;
    }
  }
  .cta {
    display: inherit;
    margin-top: 12px;
    @include fontSize(16px);
    letter-spacing: .2em;
    font-weight:  $font-weight--medium;
    text-transform: uppercase;

    @include mq('tablet-and-up') {
      margin-top: 15px;
    }

    a {
      color: $color--text-1;
      text-decoration: none;
      letter-spacing: inherit;
    }

    svg {
      width: 8px;
      height: 8px;
      margin-left: 4px;

      @include mq('tablet-and-up') {
        width: 10px;
        height: 10px;
      }
    }
    a:hover svg * {
      fill: #99482F;
    }
  }

  // item

  .instagram-user-feed {
    & > div {
      @include flexbox;
      @include flex-wrap(wrap);
    }
  }

  .instagram-item {    
    width: 50%;
    margin-left: 0;
    margin-right: 0;

    @include mq('tablet-and-up') {
      width: 25%;
    }

    img {
      opacity: 0;
    }
  }

  .instagram-image-container {
    margin-bottom: 0;
    background-size: cover;
    background-position: center center;
  }

}
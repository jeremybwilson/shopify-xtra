// COLLECTION.SCSS
// -- sections/collection-template.liquid


/*  COLLECTION: Core Variables
 * ---------------------------------------------- */
$resultsTextColor: {{ settings.filter_text_color }};


/*  COLLECTION : Main styling block
 * ---------------------------------------------- */
#shopify-section-collection-template {


    /* COLLECTION : Product Grid + Item View
     * ---------------------------------------------- */
    .collection-template {
        margin-top: 25px;

        @include mq( 'lap-and-up' ) {
            margin-top: 5px;
        }
        @include mq( 'phone' ) {
            margin-top: 5px;
        }

        @import url('../snippets/product-grid.scss.liquid');
    }
    

    /* FILTERS : Styling for filter sets
     * ---------------------------------------------- */
    @import url('../snippets/filters.scss.liquid');
}


/* RESULTS COUNT : 
 *    # of results on a collection page, only shown
 *    when filters are present so only applies here.
 *
 *    (NOTE: #results-count in breadcrumbs.liquid)
 * ---------------------------------------------- */
#results-count {
    @include h7;
    @include fontSize( 16px );
    position: static;
    top: auto;
    color: $resultsTextColor; //Imported from filters.scss.liquid
    font-weight: $font-weight--bold;

    @include mq( 'lap-and-up' ) {
        position: absolute;
        top: 0;
        right: 2px;
        left: auto;
    }
}
@include mq( 'tablet' ) {
    .collection{
        #content{
            top:20px;
        }
        #breadcrumb{
            top:15px;
        }
    }
    #shopify-section-collection-template{
        .collection-template {
            margin-top: 5px;
        }
    }
}
/*  COLLECTION: Banner
 * ---------------------------------------------- */
.collection-banner {
    margin-top: 0;
    
    img {
        width: 100%;
    }

    .asset-desk {
        display: none;
    }

    @include mq( 'lap-and-up' ) {
        .asset-mob {
            display: none;
        }
        .asset-desk {
            display: block;
        }
    }    
}

.gridlock .row .collection-banner--mobile {
    margin-left: 0;
    margin-right: 0;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
    width: 100vw;   
    margin-bottom: 0px;
    img{
        float:left;
    }
}

.has--category-banner {
    display: none;
}
.collection-banner + #breadcrumb {
  @include mq( 'lap-and-up' ) {
    padding-left: 0px;
  }

  @include mq( 'desk-and-up' ) {
    padding-left: 0px;
  }    
}
#shopify-section-collection-banner + #breadcrumb{
    padding-left: 0px;
    top:20px;
    @include mq( 'tablet' ) {
        top:0px;
        padding-top:20px;
        padding-left: 20px;
    }
    @include mq( 'phone' ) {
        top:0px;
        padding-top:20px;
        padding-left: 20px;
    }
}





























































